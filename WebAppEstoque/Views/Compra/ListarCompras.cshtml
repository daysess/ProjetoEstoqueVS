@model IEnumerable<ProjetoEstoque.Dominio.Compra>

@{
    ViewBag.Title = "ListarCompras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listar Compras</h2>

<p>
    @Html.ActionLink("Cadastrar", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Produto
        </th>
        <th>
            Embalagem
        </th>
        <th>
            Qtd Unidade
        </th>
        <th>
            Valor Unidade
        </th>
        <th>
            Valor Total
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NmProduto) - @Html.DisplayFor(modelItem => item.DsProduto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NmEmbalagemCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QtdUnidadeCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VlUnidadeCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VlTotalCompra)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Excluir", "Excluir", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
