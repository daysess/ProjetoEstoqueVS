@model ProjetoEstoque.Dominio.Embalagem

@{
    ViewBag.Title = "CadastroEmbalagem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro de Embalagem</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            <label>Nome da embalagem</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NmEmbalagem, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NmEmbalagem, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Qtd da Unidade</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.QtdUnidade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.QtdUnidade, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                @Html.ActionLink("Voltar", "ListarEmbalagens", null, htmlAttributes: new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}

