@model ProjetoEstoque.Dominio.Usuario


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


@using (Html.BeginForm()) //@*"Acessar", "Home", FormMethod.Post*@
{
    

<div class="form-signin">
    <img class="mb-4" src="~/Imagens/Logo1.jpg" alt="">
    @Html.ValidationSummary(true)
    <h1 class="h3 mb-3 font-weight-normal">Acesso ao sistema</h1>
    <div class="form-group">
        @Html.LabelFor(model => model.NmUsuario, htmlAttributes: new { @class = "sr-only" })
        @Html.EditorFor(model => model.NmUsuario, new { htmlAttributes = new { @class = "form-control", placeholder = "Usuário" } })
        @Html.ValidationMessageFor(model => model.NmUsuario)
    @*</div>
    <div class="form-group">*@
        @Html.LabelFor(model => model.Senha1, htmlAttributes: new { @class = "sr-only" })
        @Html.PasswordFor(model => model.Senha1, htmlAttributes: new { @class = "form-control", placeholder = "Senha" })
        @Html.ValidationMessageFor(model => model.Senha1)
    </div>

    <input type="submit" value="Acessar" class="btn btn-lg btn-primary btn-block " />
    @*@Html.ActionLink("Iniciar Portal", "Acessar", "Portal");*@
    <p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
</div>

    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval");
    }
}







